<div class="title-wrapper">
    <div class="title-line">
        <label class="title-label">@Label</label>

        @if (!string.IsNullOrWhiteSpace(TooltipText))
        {
            <span class="tooltip-container">
                <span class="tooltip-icon">?</span>
                <span class="tooltip-text">@TooltipText</span>
            </span>
        }
    </div>

    @ChildContent
</div>

<style>
    .title-wrapper {
        display: flex;
        flex-direction: column;
        gap: .25rem;
    }

    .title-line {
        display: flex;
        align-items: center;
        gap: .35rem;
    }

    .title-label {
        font-size: .85rem;
        color: #ccc;
        font-weight: 500;
        white-space: nowrap;
    }

    .tooltip-container {
        position: relative;
        display: inline-block;
        cursor: help;
    }

    .tooltip-icon {
        display: block;
        width: 16px;
        height: 16px;
        line-height: 16px;
        font-size: .7rem;
        font-weight: 600;
        text-align: center;
        border-radius: 50%;
        color: #fff;
        background: rgba(255,255,255,0.15);
        ;
    }

    .tooltip-text {
        visibility: hidden;
        opacity: 0;
        position: absolute;
        bottom: 110%;
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
        max-width: 240px;
        padding: 6px 8px;
        font-size: .75rem;
        background: rgba(0,0,0,.85);
        color: #fff;
        border-radius: 6px;
        white-space: pre-wrap;
        pointer-events: none;
        transition: opacity .15s ease;
        z-index: 10;
    }

    .tooltip-container:hover .tooltip-text {
        visibility: visible;
        opacity: 1;
    }

</style>