@typeparam TItem

<div class="carousel-wrapper" @onmouseenter="Pause" @onmouseleave="Resume">
    <button class="nav left" @onclick="Prev">‹</button>

    <div class="carousel-viewport">
        <div class="carousel-track" style="@TrackStyle">
            @foreach (var item in Items)
            {
                <div class="carousel-slide">
                    @SlideTemplate(item)
                </div>
            }
        </div>
    </div>

    <button class="nav right" @onclick="Next">›</button>
</div>




<style>
    .carousel-wrapper {
        position: relative;
        overflow: hidden;
        padding: 1rem 2rem;
        width: 100%;
        max-width: 1200px;
        margin: auto;
    }

    .carousel-viewport {
        overflow: hidden;
        width: 100%;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
        will-change: transform;
    }

    .carousel-slide {
        flex: 0 0 175px;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 0.5rem;
    }

</style>