<div class="carousel-info-texts">
	@{
		if (IsLink)
		{
			<a class="section-title-link" href="/">@SectionName <span class="arrow">›</span></a>
		} else
		{
			<h1 class="section-title">@SectionName</h1>
		}
	}
</div>

<style>
	.carousel-info-texts {
		display: flex;
		align-items: center;
		margin: 0 0 .75rem .75rem;
	}

	.section-title {
		font-size: 1.7rem;
		font-weight: 600;
		color: #fff;
		display: inline-flex;
		align-items: center;
		position: relative;
	}

	.section-title-link {
		font-size: 1.7rem;
		font-weight: 600;
		color: #fff;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 6px;
		position: relative;
		transition: color 0.3s ease;
	}

		.section-title-link:hover {
			color: #fff;
		}

		.section-title-link::after {
			content: "";
			position: absolute;
			left: 0;
			bottom: -4px;
			width: 0;
			height: 2px;
			background: #7459FF;
			transition: width 0.3s ease;
		}

		.section-title-link:hover::after {
			width: 100%;
		}

		.section-title-link .arrow {
			font-size: 1.35rem;
			transition: transform 0.2s ease;
		}

		.section-title-link:hover .arrow {
			transform: translateX(5px);
		}
</style>