<div class="textbox-wrapper">
    <input value="@Value"
           @oninput="HandleInput"
           class="textbox @(IsInvalid ? "invalid" : null)"
           type="@InputType"
           placeholder="@Placeholder"
           @onkeydown="OnKeyDown"
           @onblur="Validate" />

    @if (IsInvalid && !string.IsNullOrEmpty(InternalErrorText))
    {
        <div class="error-message">@InternalErrorText</div>
    }
</div>