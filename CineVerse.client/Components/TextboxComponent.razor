<div class="textbox-wrapper">
    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <label class="textbox-label">@Label</label>
    }
    <input value="@Value"
           @oninput="HandleInput"
           class="textbox"
           type="@InputType"
           placeholder="@Placeholder"
           @onkeydown="OnKeyDown"
           @onblur="HandleBlur" />

</div>

<style>

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .textbox-wrapper {
        width: 200px;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .textbox-label {
        font-size: 0.85rem;
        color: #ccc;
        font-weight: 500;
        padding-left: 4px;
    }

    .textbox {
        width: 100%;
        height: 42px;
        padding: 0 12px;
        border-radius: 8px;
        background: rgba(255,255,255,0.05);
        color: #fff;
        font-size: 0.95rem;
        outline: none;
        transition: border 0.2s ease;
        font-family: inherit;
    }

        .textbox::placeholder {
            color: #888;
        }

        .textbox:focus {
            border-color: #7459ff;
        }
</style>
