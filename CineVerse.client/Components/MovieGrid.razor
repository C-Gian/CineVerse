<MudGrid Gutter="Size.Large">
	@foreach (var movie in Movies)
	{
		<MudItem xs="6" sm="4" md="3" lg="2">
			<MovieCard Movie="movie" />
		</MudItem>
	}
</MudGrid>

<MudPagination 
	@bind-Selected="@Page"
	PageChanged="@LoadPage"
	ShowFirstButton="true" 
	ShowLastButton="true" 
	Count="@Movies.Count" 
	Class="mt-4"/>