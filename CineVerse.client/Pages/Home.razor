@page "/"
@using CineVerse.client.Components;
@using CineVerse.client.Models;

<div class="home-container">
    <Carousel TItem="Movie" Items="NowPlayingMovies" VisibleCount="5" AutoplayMs="5000" SectionName="On Air">
        <SlideTemplate Context="movie">
            <div style="width: 300px; height: 100%;">
                <MovieCard Movie="movie" />
            </div>
        </SlideTemplate>
    </Carousel>

    <div>
        <SectionTitle SectionName="Popular Movies" IsLink="false" />
        <MovieGrid Movies="PopularMovies" PageChanged="LoadPopularMoviesAsync" CurrentPage="CurrentPage" />
    </div>

    <Carousel TItem="Movie" Items="UpcomingMovies" VisibleCount="10" AutoplayMs="5000" SectionName="Upcoming">
        <SlideTemplate Context="movie">
            <div style="width: 200px; height: 100%;">
                <MovieCard Movie="movie" />
            </div>
        </SlideTemplate>
    </Carousel>
</div>

<style>
    .home-container {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin: 50px;
    }
</style>